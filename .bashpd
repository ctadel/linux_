function fn (){
   local keyword=$1
   shift
   local args="$*"
   if [[ $args ]]
   then
       args="$(sed 's/ / |grep -i /g' <<<$args)"
       local CMD="/usr/bin/find -iname $keyword |grep -i $args"
       eval $CMD
       return 0;
   fi
   local CMD="/usr/bin/find -iname $keyword"
   eval $CMD
}

